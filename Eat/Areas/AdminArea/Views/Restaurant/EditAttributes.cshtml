@model Eat.Models.Restaurant

@{
                /**/

                ViewBag.Title = "EditAttributes";
                Layout = "~/Areas/AdminArea/Views/Shared/_Layout.cshtml";
}

<h2>EditAttributes</h2>

<p>
    @Html.ActionLink("Create New Attribute", "AddAttribute", Model , new { @class = "viewDialog", data_dialog_title = "Создание атрибута" })
</p>
<table class="table">
    <tr>
        <th>
            Атрибуты ресторана
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Attributes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
    }

</table>
<script src='@Url.Content("~/Scripts/jquery-3.3.1.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>



<script>
    $(document).ready(function () {

        $.ajaxSetup({ cache: false });

        $(".viewDialog").on("click", function (e) {
            e.preventDefault();

            $("<div></div>")
                .addClass("dialog")
                //.appendTo("body")
                .appendTo(".content-header")
                .dialog({
                    title: $(this).attr("data-dialog-title"),
                    close: function () { $(this).remove() },
                    modal: true
                })
                .load(this.href);
        });
    });
</script>